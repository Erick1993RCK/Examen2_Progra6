@page
@model WebApp.Pages.Servicio.GridModel
@{
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header">

            Servicio
         
        </div>
        <div class="card-body">

            <a class="btn btn-outline-primary" asp-page="Edit">
                <i class='bx bxs-comment-add'></i>
            </a>

            <div class="row">

                <div class="col-12"></div>
                <table id="GridView" class="table table-bordered table-striped table-over">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre Servicio</th>
                            <th>Plazo de entrega</th>
                            <th>Costo</th>
                            <th>Cuenta Contable</th>
                            <th>Estado</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.GridList)
                        {
                            <tr>
                                <td>@item.IdServicio</td>
                                <td>@item.NombreServicio  </td>
                                <td>@item.PlazoEntrega</td>
                                <td>@item.CostoServicio</td>
                                <td>@item.CuentaContable</td>
                                <td>@(item.Estado ?"Activo" :"Inactivo")</td>
                                <td>
                                    <a class="btn btn-secondary" asp-page="Edit" asp-route-id="@item.IdServicio"><i class='bx bx-edit'></i></a>
                                    <button type="button" class="btn btn-secondary" onclick="ServicioGrid.OnClickEliminar(@item.IdServicio)"><i class='bx bx-trash'></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>


        </div>
    </div>
</div>


@section Scripts{

    <script defer src="~/App/Servicio/Grid.js"></script>

}